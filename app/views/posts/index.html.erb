<div class="column is-half is-offset-one-quarter">
  <h1 class="title is-3">Messages (<%= Post.all.count %>)</h1>
  <% @posts.each do |post| %>
    <div class="box">
      <div class="media-content">
        <div class="content">
          <strong><%= post[:title] %></strong><br />
          <p><%= post[:body] %></p>
          <% if user_signed_in? %>
            <nav class="level">
              <div class="level-left">
                <small><%= "Written by: #{post.user.name}" %></small>
              </div>
            </nav>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
