<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2">New Post</h2>
        <%= simple_form_for(@post) do |f| %>
          <%= f.error_notification %>
          <div class="field">
            <div class="control">
              <%= f.input :title, input_html: { class: "text" }, wrapper: false, label_html: { class: "label" }, placeholder: "Title goes here..." %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :body, label: "Write a message", input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" }, placeholder: "Write a message here..." %>
            </div>
          </div>
          <%= f.button :submit, class: "button is-info" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
