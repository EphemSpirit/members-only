<% simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :post, label: "Write a post", input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" }, placeholder: "Write a post here..." %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
